{
  "name": "@techbybrewski/retroarch-pwa-configurator",
  "version": "0.1.0",
  "description": "A TypeScript-powered Progressive Web App for configuring and managing RetroArch server setups with policy-driven validation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc --watch\" \"nodemon --watch dist --delay 500ms dist/src/server.js\"",
    "dev:server": "tsx watch src/server.ts",
    "serve": "node dist/src/server.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "policy:check": "node dist/src/policy-checker.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "ci:verify": "npm run format:check && npm run lint && npm run type-check && npm run build && npm run policy:check && npm run test:coverage && npm run test:e2e",
    "prepare": "husky"
  },
  "keywords": [
    "retroarch",
    "pwa",
    "configurator",
    "typescript",
    "solid",
    "policy-as-code",
    "techbybrewski"
  ],
  "author": "TechByBrewski",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^1.6.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
