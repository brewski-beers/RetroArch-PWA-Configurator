{
  "name": "@techbybrewski/retroarch-pwa-configurator",
  "version": "0.1.0",
  "description": "A TypeScript-powered Progressive Web App for configuring and managing RetroArch server setups with policy-driven validation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc --watch\" \"nodemon --watch dist --delay 500ms dist/src/server.js\"",
    "dev:server": "tsx watch src/server.ts",
    "serve": "node dist/src/server.js",
    "setup": "tsx src/config/config-wizard.ts",
    "setup:help": "echo 'Run: npm run setup' && echo 'Interactive wizard to configure RetroArch directory structure'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "policy:check": "node dist/src/policy-checker.js",
    "policy:docs": "node dist/src/policy-documentation-generator.js",
    "security:audit": "npm audit --audit-level=high",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "demo:ingest": "tsx examples/ingest-rom.ts",
    "demo:nes": "tsx examples/ingest-rom.ts examples/roms/demo-game.nes",
    "demo:snes": "tsx examples/ingest-rom.ts examples/roms/demo-game.sfc",
    "demo:genesis": "tsx examples/ingest-rom.ts examples/roms/demo-game.md",
    "demo:all": "npm run demo:nes && npm run demo:snes && npm run demo:genesis",
    "ci:verify": "npm run format:check && npm run lint && npm run type-check && npm run build && npm run policy:check && npm run test:coverage && npm run test:e2e",
    "prepare": "husky"
  },
  "keywords": [
    "retroarch",
    "pwa",
    "configurator",
    "typescript",
    "solid",
    "policy-as-code",
    "techbybrewski"
  ],
  "author": "TechByBrewski",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^1.6.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "zod": "^4.2.1"
  }
}
