{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/mcp-server",
    "rootDir": "..",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "../config/**/*.ts",
    "../tests/config/**/*.ts",
    "../e2e/config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../dist",
    "../tests/**/*.test.ts",
    "../e2e/tests/**/*.spec.ts"
  ]
}
